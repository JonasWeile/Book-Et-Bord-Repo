@model List<MVCBookBord.Models.Table>

@{
    ViewBag.Title = "Step1";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/jquery.datetimepicker.css" rel="stylesheet" />

<div class="Step1MainTop">
