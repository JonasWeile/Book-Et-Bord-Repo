        <div class="input-wrapper">
            <input class="form-control" type="text" id="datetimepicker" />
            <label for="stuff" class="fa fa-calendar input-icon"></label>
        </div><br /><br />
                    <select class="form-control" id="sel1">
                        @foreach (var tab in ViewData["tables"] as List<MVCBookBord.Models.Table>)
